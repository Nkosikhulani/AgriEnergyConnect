        });
    </script>
}

@section Styles {
    <style>
        .nav-tabs .nav-link {
            color: #495057;
            font-weight: 500;
            transition: all 0.3s;
        }

            .nav-tabs .nav-link.active {
                color: #0d6efd;
                border-bottom: 3px solid #0d6efd;
            }

        .tab-content {
            padding-top: 1rem;
        }

        .form-text {
            font-size: 0.8rem;
        }
    </style>
}