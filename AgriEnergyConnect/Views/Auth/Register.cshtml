@model AgriEnergyConnect.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4><i class="fas fa-user-plus me-2"></i>Join Agri-Energy Connect</h4>
                </div>
                <div class="card-body p-4">
                    <ul class="nav nav-tabs nav-justified mb-4" id="registerTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="farmer-tab" data-bs-toggle="tab" data-bs-target="#farmer-register" type="button" role="tab">
                                <i class="fas fa-tractor me-2"></i>Farmer Registration
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="employee-tab" data-bs-toggle="tab" data-bs-target="#employee-register" type="button" role="tab">
                                <i class="fas fa-user-tie me-2"></i>Employee Registration
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content">
                        @* Farmer Registration Form *@
                        <div class="tab-pane fade show active" id="farmer-register" role="tabpanel">
                            <form asp-action="Register" method="post">
                                @Html.AntiForgeryToken() @* Ensures the Anti-Forgery Token is included *@
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div> @* Shows only model-level errors *@

                                <input type="hidden" asp-for="Role" value="Farmer" /> @* Sets the Role for farmer registration *@

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="FirstName" class="form-label"></label>
                                        <input asp-for="FirstName" class="form-control" />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="LastName" class="form-label"></label>
                                        <input asp-for="LastName" class="form-control" />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="FarmName" class="form-label"></label>
                                    <input asp-for="FarmName" class="form-control" />
                                    <span asp-validation-for="FarmName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Password" class="form-label"></label>
                                        <input asp-for="Password" class="form-control" id="farmerPassword" />
                                        <div class="form-text">Minimum 8 characters</div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="ConfirmPassword" class="form-label"></label>
                                        <input asp-for="ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Location" class="form-label"></label>
                                    <select asp-for="Location" class="form-select">
                                        <option value="">Select your region</option>
                                        <option>Eastern Cape</option>
                                        <option>Free State</option>
                                        <option>Gauteng</option>
                                        <option>KwaZulu-Natal</option>
                                        <option>Limpopo</option>
                                        <option>Mpumalanga</option>
                                        <option>North West</option>
                                        <option>Northern Cape</option>
                                        <option>Western Cape</option>
                                    </select>
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>

                                <div class="mb-3 form-check">
                                    <input asp-for="FarmerTerms" class="form-check-input" />
                                    <label class="form-check-label" asp-for="FarmerTerms">I agree to the <a href="#">Terms of Service</a></label>
                                    <span asp-validation-for="FarmerTerms" class="text-danger d-block"></span> @* d-block for better display if error *@
                                </div>

                                <button type="submit" class="btn btn-success w-100 py-2">
                                    <i class="fas fa-user-plus me-2"></i>Register as Farmer
                                </button>
                            </form>
                        </div>

                        @* Employee Registration Form *@
                        <div class="tab-pane fade" id="employee-register" role="tabpanel">
                            <form asp-action="Register" method="post">
                                @* Point to the same Register action *@
                                @Html.AntiForgeryToken()
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                <input type="hidden" asp-for="Role" value="Employee" /> @* Sets the Role for employee registration *@

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="FirstName" class="form-label"></label>
                                        <input asp-for="FirstName" class="form-control" />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="LastName" class="form-label"></label>
                                        <input asp-for="LastName" class="form-control" />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="EmployeeId" class="form-label"></label>
                                    <input asp-for="EmployeeId" class="form-control" />
                                    <div class="form-text">Provided by your administrator</div>
                                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Password" class="form-label"></label>
                                        <input asp-for="Password" class="form-control" id="employeePassword" />
                                        <div class="form-text">Minimum 12 characters</div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="ConfirmPassword" class="form-label"></label>
                                        <input asp-for="ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Department" class="form-label"></label>
                                    <select asp-for="Department" class="form-select">
                                        <option value="">Select department</option>
                                        <option>Technical Support</option>
                                        <option>Farmer Relations</option>
                                        <option>Energy Solutions</option>
                                        <option>Administration</option>
                                        <option>Management</option>
                                    </select>
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>

                                <div class="mb-3 form-check">
                                    <input asp-for="EmployeeTerms" class="form-check-input" />
                                    <label class="form-check-label" asp-for="EmployeeTerms">I agree to the <a href="#">Employee Terms</a></label>
                                    <span asp-validation-for="EmployeeTerms" class="text-danger d-block"></span> @* d-block for better display if error *@
                                </div>

                                <button type="submit" class="btn btn-primary w-100 py-2">
                                    <i class="fas fa-user-plus me-2"></i>Register as Employee
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <small>Already have an account? <a asp-controller="Auth" asp-action="Login">Login here</a></small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> @* Essential for client-side validation *@

    <script>
        // Password strength indicator for farmers
        document.getElementById('farmerPassword').addEventListener('input', function() {
            // Add password strength logic here
        });

        // Password strength indicator for employees
        document.getElementById('employeePassword').addEventListener('input', function() {
            // Add password strength logic here
        });
    </script>
}

@section Styles {
    <style>
        .nav-tabs .nav-link {
            color: #495057;
            font-weight: 500;
            transition: all 0.3s;
        }

            .nav-tabs .nav-link.active {
                color: #0d6efd;
                border-bottom: 3px solid #0d6efd;
            }

        .tab-content {
            padding-top: 1rem;
        }

        .form-text {
            font-size: 0.8rem;
        }
    </style>
}