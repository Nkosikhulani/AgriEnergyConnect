@* Views/Marketplace/Index.cshtml (Example file name) *@
@{
    ViewData["Title"] = "Marketplace";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-md-3">
            <select class="form-select">
                <option selected>All Categories</option>
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-select">
                <option selected>Price Range</option>
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-select">
                <option selected>Farm Size</option>
            </select>
        </div>
        <div class="col-md-3">
            <input type="text" class="form-control" placeholder="Search products...">
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card product-card">
                <div class="position-relative">
                    <img src="~/images/solar pump.jpg" class="card-img-top" alt="Solar Pump" style="height: 200px; object-fit: cover;">
                    <span class="badge bg-success position-absolute top-0 start-0 m-2">BESTSELLER</span>
                    <span class="badge bg-warning text-dark position-absolute top-0 end-0 m-2">-15%</span>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Solar Pump 5000</h5>
                    <p class="card-text text-success fw-bold">R15,000 <s class="text-muted small">R17,500</s></p>
                    <p class="card-text"><small class="text-muted">4.7 (128 reviews)</small></p>
                    <p class="card-text">5HP solar-powered irrigation pump with 5-year warranty</p>
                    <p class="card-text">3.5kWh daily output<br>Drought-resistant</p>
                    <div class="d-grid gap-2">
                        <button class="btn btn-success">Add to Cart</button>
                        <button class="btn btn-outline-secondary">Compare</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card product-card">
                <div class="position-relative">
                    <img src="~/images/Farm wind.jpg" class="card-img-top" alt="Wind Turbine" style="height: 200px; object-fit: cover;">
                </div>
                <div class="card-body">
                    <h5 class="card-title">FarmWind 2000</h5>
                    <p class="card-text text-success fw-bold">R45,000</p>
                    <p class="card-text"><small class="text-muted">4.9 (64 reviews)</small></p>
                    <p class="card-text">Vertical axis turbine for low-wind areas</p>
                    <p class="card-text">2kW output<br>Silent operation</p>
                    <div class="d-grid gap-2">
                        <button class="btn btn-success">Add to Cart</button>
                        <button class="btn btn-outline-secondary">Compare</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card product-card">
                <div class="position-relative">
                    <img src="~/images/Biogas pro.jpg" class="card-img-top" alt="Biogas System" style="height: 200px; object-fit: cover;">
                    <span class="badge bg-info position-absolute top-0 start-0 m-2">NEW SYSTEM</span>
                </div>
                <div class="card-body">
                    <h5 class="card-title">BioGas Pro</h5>
                    <p class="card-text text-success fw-bold">R32,000</p>
                    <p class="card-text"><small class="text-muted">4.5 (42 reviews)</small></p>
                    <p class="card-text">Convert waste to energy for medium farms</p>
                    <p class="card-text">4m³ daily gas<br>Includes digester</p>
                    <div class="d-grid gap-2">
                        <button class="btn btn-success">Add to Cart</button>
                        <button class="btn btn-outline-secondary">Compare</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
}

@section Styles {
    <style>
        /* Optional: Add some styling for the product cards if they don't look as expected */
        .product-card {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0,0,0,0.05);
            margin-bottom: 20px; /* Space between cards */
            height: 100%; /* Ensure cards are same height in a row */
        }

            .product-card .card-body {
                padding: 15px;
            }

            .product-card .card-title {
                font-size: 1.25rem;
                color: #28a745; /* Bootstrap success green */
            }

            .product-card .card-text.fw-bold {
                font-size: 1.1rem;
            }

            .product-card .card-img-top {
                width: 100%;
                display: block; /* Ensures no extra space below image */
            }
    </style>
}