@* Views/Education/Index.cshtml *@
@{
    ViewData["Title"] = "Training Resources";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-success mb-3">
            <i class="fas fa-graduation-cap me-2"></i>@ViewData["Title"]
        </h1>
        <p class="lead">Enhance your skills with our green energy courses and workshops</p>
    </div>

    <div class="mb-5">
        <h2 class="text-success mb-4 border-bottom pb-2">
            <i class="fas fa-calendar-check me-2"></i>Upcoming Events
        </h2>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Solar Irrigation Workshop</h5>
                    </div>
                    <div class="card-body">
                        <p><i class="fas fa-calendar-alt text-success me-2"></i><strong>Date:</strong> June 15, 2024</p>
                        <p><i class="fas fa-clock text-success me-2"></i><strong>Time:</strong> 10:00 AM - 12:00 PM</p>
                        <p><i class="fas fa-map-marker-alt text-success me-2"></i><strong>Location:</strong> Online (Zoom)</p>
                        <hr>
                        <p>Learn how to implement solar-powered irrigation systems on your farm.</p>
                        <button class="btn btn-outline-success w-100">Register Now</button>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Wind Energy Basics</h5>
                    </div>
                    <div class="card-body">
                        <p><i class="fas fa-calendar-alt text-success me-2"></i><strong>Date:</strong> June 22, 2024</p>
                        <p><i class="fas fa-clock text-success me-2"></i><strong>Time:</strong> 2:00 PM - 4:00 PM</p>
                        <p><i class="fas fa-map-marker-alt text-success me-2"></i><strong>Location:</strong> Cape Town</p>
                        <hr>
                        <p>Introduction to small-scale wind turbines for agricultural use.</p>
                        <button class="btn btn-outline-success w-100">Register Now</button>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Biogas Production</h5>
                    </div>
                    <div class="card-body">
                        <p><i class="fas fa-calendar-alt text-success me-2"></i><strong>Date:</strong> July 5, 2024</p>
                        <p><i class="fas fa-clock text-success me-2"></i><strong>Time:</strong> 9:00 AM - 1:00 PM</p>
                        <p><i class="fas fa-map-marker-alt text-success me-2"></i><strong>Location:</strong> Johannesburg</p>
                        <hr>
                        <p>Turn farm waste into renewable energy with biogas systems.</p>
                        <button class="btn btn-outline-success w-100">Register Now</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-5">
        <h2 class="text-success mb-4 border-bottom pb-2">
            <i class="fas fa-book-open me-2"></i>Available Courses
        </h2>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-success">
                    <tr>
                        <th>Course Name</th>
                        <th>Duration</th>
                        <th>Format</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <strong>Introduction to Solar Power</strong>
                            <p class="mb-0 text-muted">Basic photovoltaic systems for farms</p>
                        </td>
                        <td>4 weeks</td>
                        <td>Online</td>
                        <td>R 1,500</td>
                        <td><button class="btn btn-sm btn-outline-success">Enroll</button></td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Advanced Water Conservation</strong>
                            <p class="mb-0 text-muted">Efficient irrigation techniques</p>
                        </td>
                        <td>2 days</td>
                        <td>In-person</td>
                        <td>R 800</td>
                        <td><button class="btn btn-sm btn-outline-success">Enroll</button></td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Organic Farming Certification</strong>
                            <p class="mb-0 text-muted">Transition to organic practices</p>
                        </td>
                        <td>6 weeks</td>
                        <td>Hybrid</td>
                        <td>R 2,200</td>
                        <td><button class="btn btn-sm btn-outline-success">Enroll</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div>
        <h2 class="text-success mb-4 border-bottom pb-2">
            <i class="fas fa-download me-2"></i>Free Resources
        </h2>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-file-pdf fa-3x text-success mb-3"></i>
                        <h5>Solar Installation Guide</h5>
                        <p class="text-muted">Step-by-step manual for solar panel setup</p>
                        <button class="btn btn-outline-success">
                            <i class="fas fa-download me-2"></i>Download
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-video fa-3x text-success mb-3"></i>
                        <h5>Webinar Recordings</h5>
                        <p class="text-muted">Past sessions on renewable energy</p>
                        <button class="btn btn-outline-success">
                            <i class="fas fa-play-circle me-2"></i>Watch Now
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-calculator fa-3x text-success mb-3"></i>
                        <h5>Energy Savings Calculator</h5>
                        <p class="text-muted">Estimate your potential savings</p>
                        <button class="btn btn-outline-success">
                            <i class="fas fa-external-link-alt me-2"></i>Access Tool
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Apply the background image to the body with no gradient overlay */
        body {
            background: url('/images/Colab.jpg') center top / cover no-repeat fixed;
            /* 'center top' centers horizontally, aligns to top vertically.
                       'cover' scales to cover the whole body.
                       'no-repeat' prevents tiling.
                       'fixed' makes the background scroll with the page.
                    */
        }

        /* Ensure cards have a solid white background for readability */
        .card {
            background-color: #fff; /* Solid white */
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
            }

        /* Ensure the table and its rows have solid white backgrounds for readability */
        .table {
            background-color: #fff; /* Solid white for the table background */
        }

            .table thead {
                background-color: #d1e7dd; /* Bootstrap's success light color for header */
            }

            .table tbody tr {
                background-color: #fff; /* Solid white for table rows */
            }

        .table-hover tbody tr:hover {
            background-color: #e2f2e5; /* Slightly darker hover color for success theme */
        }

        /* Ensure other elements like the main header text area also have appropriate backgrounds if needed */
        /* The .text-center.mb-5 container doesn't have a background-color, so it will be transparent,
                   which is fine for readability of its dark text on the image. */
    </style>
}