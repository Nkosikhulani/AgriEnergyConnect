<section class="sustainable-hero text-center py-5">
    <div class="container">
        <h1 class="display-4 text-success mb-3">
            <i class="fas fa-leaf me-2"></i>@ViewData["Title"]
        </h1>
        <p class="lead">Share best practices and connect with experts</p>
        <div class="search-bar mt-4 mx-auto" style="max-width: 600px;">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search techniques, tools, or experts...">
                <button class="btn btn-success" type="button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </div>
</section>